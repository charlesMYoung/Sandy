---
import { cn } from "@nextui-org/react";
import type { Menu } from "~/types/config";
import { removeSlash } from "~/utils/common";

export interface Props {
  menus: Menu[];
  activeKey: string;
  parentUrl: string;
}

const { menus, activeKey, parentUrl } = Astro.props;
---

<div
  class="flex w-full flex-col space-y-4 pb-10 md:flex-row md:space-x-6 md:space-y-0 prose px-6 md:px-0 max-w-screen-sm md:max-w-screen-md mx-auto flex-1 md:py-16"
>
  {
    menus.map((menu) => {
      return (
        <a
          class={cn("text-2xl no-underline text-default-500", {
            "text-primary": activeKey === menu.url,
          })}
          href={`/${parentUrl}-${removeSlash(menu.url)}/blog`}
        >
          {menu.title}
        </a>
      );
    })
  }
</div>
