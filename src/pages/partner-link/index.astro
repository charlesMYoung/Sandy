---
import HomeLayout from "~/layouts/HomeLayout.astro";
import Contact from "~/components/Contact";
import { Config } from "~/config";
import { Avatar, Link } from "@heroui/react";
import TiltedScroll from "~/components/TiltedScroll";
---

<HomeLayout
  title="友链"
  description="感谢认识他们"
  file=""
  url=""
  headings={[]}
  frontmatter={{
    file: "",
    url: undefined,
    title: "友链",
    description: "感谢认识他们",
  }}
  rawContent={() => ""}
  compiledContent={() => Promise.resolve("")}
>
  <h1>友链</h1>
  <p>在这里我遇见了新朋友</p>

  <div class="gap-4 flex">
    {
      Config.partnerLinks.map((link) => {
        return (
          <Link href={link.url} key={link.name} className="flex gap-2">
            <Avatar src={link.avatar} client:visible />
            {link.name}
          </Link>
        );
      })
    }
  </div>
  <TiltedScroll client:visible partners={Config.partnerLinks} />
  <div class="w-full pt-40">
    <Contact client:visible />
  </div>
</HomeLayout>
